CREATE TABLE product_catalog_labels (
                                        id INT AUTO_INCREMENT PRIMARY KEY,
                                        label_name VARCHAR(50),
                                        label_text VARCHAR(255),
                                        image_path VARCHAR(255)
);
ALTER TABLE product_catalog_labels ADD COLUMN image_data LONGBLOB;

